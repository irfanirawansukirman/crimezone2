<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/rel_usr_tgl_alamat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <RelativeLayout
            android:id="@+id/rel_ava_usr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp" >

            <ImageView
                android:id="@+id/img_ava_timeline"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_avatar" />

            <TextView
                android:id="@+id/txt_user_timeline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/img_ava_timeline"
                android:text="Dummy"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/rel_ava_usr"
            android:paddingRight="20dp" >

            <TextView
                android:id="@+id/txt_tgl_post_timeline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:text="Tanggal"
                android:textColor="#ababab"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txt_address_post_timeline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/txt_tgl_post_timeline"
                android:text="Disini Alamat Kejahatannya"
                android:textColor="#ababab"
                android:textSize="12sp" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rel_usr_tgl_alamat" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/img_timeline"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_image_logo" />

            <TextView
                android:id="@+id/txt_tag_timeline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:background="#80000000"
                android:padding="4dp"
                android:text="#tag here" />
        </FrameLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#80000000"
            android:paddingBottom="15dp"
            android:paddingLeft="25dp"
            android:paddingTop="15dp" >

            <TextView
                android:id="@+id/txt_title_timeline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Judul Kejadian"
                android:textSize="16sp" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>